>
<div class="container" style="height: 72vh">
  <div class="row justify-content-center mt-5">
    <div class="col-md-5 bg-white p-5">
      <h2 style="font-weight: 700 ; border-bottom:3px solid #801336 ; padding-bottom: 10px">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
           <%= render "devise/shared/links/" %>
      </div>
    <% end %>

    </div>
        <div class="col-md-5 bg-white p-5" style="background-image:url('https://www.bedetheque.com/media/Planches/PlancheS_82.jpg'); background-size: cover">
    </div>
  </div>
</div>
