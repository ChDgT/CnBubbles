<div class="container" style="min-height: 80vh">
  <h1>Comic's info</h1>

<div class="card-product">
  <%= cl_image_tag(@comic.photo, height: 550, width: 400, crop: :fill) %>
  <div class="card-product-infos">
    <h1><%= @comic.title.capitalize %></h1>
    <h3><%= @comic.category.capitalize %></h3>
    <p> <%= @comic.description %> </p>
    <p><small> <%= @comic.publication_date %> </small></p>
  </div>
</div>
  <%= link_to "Go back to the comics", comics_path, class: "btn btn-primary" %>
  <span class="btn btn-danger"><%= link_to "Delete", comic_path(@comic),
  {method: :delete, data:{ confirm: "Are you sure?"}}%></span>
    <%= link_to "Edit", edit_comic_path(@comic), class: "btn btn-warning"%>
</div>


