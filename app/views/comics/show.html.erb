<div class="container" style="min-height: 80vh">
  <h1>Comic's info</h1>

  <div class="card-product rounded">
    <%= @comic.photo.url.nil? ? image_tag("no_photo.jpg") : cl_image_tag(@comic.photo, height: 550, width: 400, crop: :fill) %>
    <div class="d-flex">
      <div class="card-product-infos">
        <h1><%= @comic.title.capitalize %></h1>
        <h3><%= "#{@comic.price}â‚¬" %></h3>
        <h3><%= @comic.category.capitalize %></h3>
        <p><%= @comic.description %></p>
        <p><%= @comic.publication_date %></p>
      </div>

      <% if @comic.available %>
        <%= simple_form_for [@comic, @booking] do |f| %>
          <%= f.submit "Book now !", class: "btn btn-primary" %>
        <% end %>
      <% else %>
        <div class="back-booked">
          Waiting for owner acceptation
        </div>
        <% end %>
    </div>
  </div>

<div class="comic-option py-3">
  <%= link_to "Go back to the comics", comics_path, class:"btn btn-outline-dark"%>
