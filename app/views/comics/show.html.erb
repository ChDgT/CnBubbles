<div class="container" style="min-height: 80vh">
  <h1>Comic's info</h1>

<div class="card-product rounded">
  <%= cl_image_tag(@comic.photo, height: 550, width: 400, crop: :fill) %>
  <div class="d-flex align-items-center justify-content-around">
    <div class="card-product-infos">
      <h1><%= @comic.title.capitalize %></h1>
      <h2><%= "#{@comic.price}â‚¬" %></h2>
      <h3><%= @comic.category.capitalize %></h3>
      <p> <%= @comic.description %> </p>
      <p><small> <%= @comic.publication_date %> </small></p>
    </div>

    <% if @comic.available %>
      <div class='book-button'><%= link_to "Book this comic now !", new_comic_booking_path(@comic)%></div>
      <% else %>
      <a href="#" class="book-button">Already Booked</a>
      <% end %>
  </div>
</div>


<div class="comic-option py-3">
  <%= link_to "Go back to the comics", comics_path, class: "btn btn-primary" %>
  <% if policy(@comic).edit? %>
    <%= link_to "Edit", edit_comic_path(@comic), class: "btn btn-primary"%>
    <% end %>
    <% if @comic.available %>
      <span class="btn btn-outline-dark"><%= link_to "Delete", comic_path(@comic),
      {method: :delete, data:{ confirm: "Are you sure?"}}%></span>
      <% end %>
</div>


</div>




